<div class="container mt-4">
  <div class="row">
    <div class="col-3">
      <ul class="list-group">
        <%= render "shared/list_group", categories: @categories %>
      </ul>
    </div>
    <div class="col-9">
      <div class="row">
        <div class="col-12">
          <%= render "shared/carousel" %>
        </div>
      </div>
      <div class="row mt-3">
        <% @products.each do |product| %>
          <div class="col-3">
            <%# <p>傳參數進去給 card</p> %>
            <%= render "shared/card", product: product %>
          </div>
        <% end %>
      </div>
      <div class="d-flex justify-content-center">
        <div class="row mt-4">
          <div class="col-12">
            <%= render "shared/pagination",
              page: @page,
              first_page: @page,
              last_page: @last_page
             %>
          </div> 
        </div>
      </div>
    </div>
  </div>
</div>

